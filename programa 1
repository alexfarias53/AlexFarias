print("******* Bem vindo **********")
cont = "sim"
while cont == "sim":
 print("digite a nota1")
 nota1 = float(input())

 print("digite a nota2")
 nota2 = float(input())

 print("digite a nota3")
 nota3 = float(input())

 media = (nota1 + nota2 + nota3)/3
 print("Sua média é :\n", media)
 if media <= 6:
  print("aluno reprovado")
 else:
  print("aluno aprovado ")
  cont = str(input("deseja continuar: sim ou não"))


























